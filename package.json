{
  "name": "node_chat",
  "version": "1.0.0",
  "description": "Chat using Node.js",
  "main": "src/index.js",
  "scripts": {
    "init": "mate-scripts init",
    "start": "node src/index.js",
    "lint": "npm run format && mate-scripts lint",
    "format": "prettier --ignore-path .prettierignore --write './src/**/*.{js,ts}'",
    "test:only": "mate-scripts test",
    "update": "mate-scripts update",
    "postinstall": "npm run update",
    "test": "npm run lint && npm run test:only",
    "launch": "npm i && npm run backend:install && npm run frontend:install && npm run start:all",
    "backend:install": "cd backend && npm install",
    "frontend:install": "cd frontend && npm install",
    "start:all": "concurrently \"npm run backend:start\" \"npm run frontend:start\"",
    "backend:start": "cd backend && ./node_modules/.bin/nodemon ./src/index.js",
    "frontend:start": "cd frontend && npm run start"
  },
  "author": "Mate academy",
  "license": "GPL-3.0",
  "devDependencies": {
    "@mate-academy/eslint-config": "latest",
    "@mate-academy/scripts": "^1.8.6",
    "concurrently": "^8.2.2",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-node": "^8.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "mateAcademy": {
    "projectType": "javascript"
  }
}
